[MASTER]
# jobs=0 means 'use all CPUs'
jobs=0

[MESSAGES CONTROL]
disable =
  missing-docstring,
  pointless-statement,
  line-too-long,
  invalid-name,
  no-value-for-parameter,
  no-member,
  unused-argument,
  broad-except,
  relative-import,
  wrong-import-position,
  bare-except,
  locally-disabled,
  protected-access,
  abstract-method,
  no-self-use,
  fixme,
  too-few-public-methods,
  ungrouped-imports,
  bad-continuation,
  redefined-outer-name,
  simplifiable-if-expression,
  no-else-return,
  stop-iteration-return,
  too-many-arguments,
  import-outside-toplevel,
  too-many-locals,
  too-many-nested-blocks,
  too-many-lines,
  too-many-branches,
  too-many-statements,
  super-init-not-called,

[REPORTS]
output-format=colorized

[FORMAT]
logging-modules=
  logging,
  structlog,
